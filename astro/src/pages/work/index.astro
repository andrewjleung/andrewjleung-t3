---
import {
    VerticalSpotlightList,
    VerticalSpotlightListItem,
} from "@/components/vertical-spotlight-list";
import { Card } from "@/components/ui/card";
import Layout from "@/layouts/Layout.astro";

type LinkItem = {
    name: string;
    detail?: string;
    href?: string;
};

const WORK_ITEMS: LinkItem[] = [
    {
        name: "PayPal",
        detail: "2023â€”present",
        href: "https://www.paypal.com",
    },
    {
        name: "Poloniex",
        detail: "2021",
        href: "https://www.poloniex.com",
    },
    {
        name: "Teikametrics",
        detail: "2020",
        href: "https://www.teikametrics.com",
    },
    {
        name: "Curriculum Associates",
        detail: "2019",
        href: "https://www.curriculumassociates.com",
    },
    {
        name: "Veoneer",
        detail: "2018",
        href: "https://www.veoneer.com",
    },
];
---

<Layout>
    <main class="flex flex-col gap-5">
        <section
            id="work-history"
            class="mb-36 animate-fade-in-up pt-2 border-t"
        >
            <VerticalSpotlightList numItems={WORK_ITEMS.length} client:load>
                {WORK_ITEMS.map(w =>(
            <VerticalSpotlightListItem key={`work-item-${w.name.toLowerCase()}`} className="group not-last:mb-0.5">
                <a href={w.href} class="flex flex-row items-center">
                    <span
                        class="font-semibold text-4xl tracking-tight duration-200 ease-out group-hover:translate-x-2 whitespace-nowrap"
                    >
                        {w.name}
                    </span>
                    <span
                        class="text-sm ml-auto  opacity-0 group-hover:opacity-90 ease-out duration-400 transition-all mr-2 whitespace-nowrap"
                    >
                        {w.detail}  
                    </span> 
                </a>
            </VerticalSpotlightListItem>
            ) )}
            </VerticalSpotlightList>
        </section>
    </main>
</Layout>

