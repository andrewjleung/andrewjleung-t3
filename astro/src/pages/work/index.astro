---
import {
    VerticalSpotlightList,
    VerticalSpotlightListItem,
} from "@/components/vertical-spotlight-list";
import { Card } from "@/components/ui/card";
import Layout from "@/layouts/Layout.astro";

type LinkItem = {
    name: string;
    detail?: string;
    href?: string;
};

const WORK_ITEMS: LinkItem[] = [
    {
        name: "PayPal",
        detail: "2023â€”present",
        href: "https://www.paypal.com",
    },
    {
        name: "Poloniex",
        detail: "2021",
        href: "https://www.poloniex.com",
    },
    {
        name: "Teikametrics",
        detail: "2020",
        href: "https://www.teikametrics.com",
    },
    {
        name: "Curriculum Associates",
        detail: "2019",
        href: "https://www.curriculumassociates.com",
    },
    {
        name: "Veoneer",
        detail: "2018",
        href: "https://www.veoneer.com",
    },
];
---

<Layout>
    <main class="flex flex-col gap-5">
        <section
            id="work-history"
            class="mb-36 animate-fade-in-up sm:pt-2 sm:border-t"
        >
            <VerticalSpotlightList numItems={WORK_ITEMS.length} client:load>
                {WORK_ITEMS.map(w =>(
                <VerticalSpotlightListItem key={`work-item-${w.name.toLowerCase()}`} className="group not-last:mb-0.5">
                    <a href={w.href} class="sm:mb-0 mb-6 flex flex-col-reverse sm:flex-row sm:items-center">
                        <span
                            class="font-semibold text-4xl tracking-tight duration-200 ease-out sm:group-hover:translate-x-2 whitespace-nowrap"
                        >
                            {w.name}
                        </span>
                        <span
                            class="text-xs sm:text-sm sm:ml-auto text-muted-foreground sm:text-foreground sm:opacity-0 sm:group-hover:opacity-90 ease-in-out sm:ease-out duration-100 sm:duration-400 transition-all mr-2 whitespace-nowrap"
                        >
                            {w.detail}  
                        </span> 
                    </a>
                </VerticalSpotlightListItem>
                ) )}
            </VerticalSpotlightList>
        </section>
    </main>
</Layout>

