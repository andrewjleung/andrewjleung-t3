---
import { Notebook } from "lucide-react";
import { Badge } from "@/components/ui/badge";
import { BigList, BigListItem } from "@/components/BigList";

type LinkItem = {
    name: string;
    detail?: string;
    href?: string;
};

const WORK_ITEMS: LinkItem[] = [
    {
        name: "Company",
        detail: "coming soon",
    },
    {
        name: "PayPal",
        detail: "2023â€”present",
        href: "/work/paypal",
    },
    {
        name: "Poloniex",
        detail: "2021",
        href: "/work/poloniex",
    },
    {
        name: "Teikametrics",
        detail: "2020",
        href: "/work/teikametrics",
    },
    {
        name: "Curriculum Associates",
        detail: "2019",
        href: "/work/curriculum-associates",
    },
    {
        name: "Veoneer",
        detail: "2018",
        href: "/work/veoneer",
    },
];

const LINK_ITEMS: LinkItem[] = [
    {
        name: "Resume",
        href: "/resume",
    },
    {
        name: "Blog",
        href: "/blog",
    },
    {
        name: "GitHub",
        href: "/github",
    },
    {
        name: "LinkedIn",
        href: "/linkedin",
    },
];
---

<div id="container" class="flex flex-col items-center">
    <main class="max-w-md mt-32 flex flex-col gap-5 ">
        <!-- <ModeToggle client:load /> -->

        <section class="flex flex-col gap-5">
            <h2 class="">Welcome in, shoes off if you please.</h2>
            <p class="text-midground">
                I'm
                <a
                    href="/about"
                    class="underline hover:text-chart-1 dark:hover:text-chart-3 hover:cursor-pointer"
                    >Andrew</a
                >&mdash;I aim to build simple, satisfying software, for fun and
                friction. I've been writing code for nearly a decade,
                professionally for the last three years. Lately building
                personal tools in
                <a
                    href="https://www.rust-lang.org/"
                    class="rust hover:cursor-pointer underline hover:text-chart-1 dark:hover:text-chart-3"
                >
                    Rust</a
                >.
            </p>
        </section>

        <br>

        <section id="work-history" class="">
            <BigList numItems={WORK_ITEMS.length} client:load>
                {WORK_ITEMS.map(w =>(
                <BigListItem key={`work-item-${w.name.toLowerCase()}`} className="group">
                    <a href={w.href} class="flex flex-row items-center">
                        <span
                            class="font-semibold text-2xl tracking-tight duration-200 ease-out group-hover:translate-x-2"
                        >
                            {w.name}
                        </span>
                        <span
                            class="text-xs ml-auto text-midground opacity-0 group-hover:opacity-90 ease-out duration-400 transition-all mr-2"
                        >
                            {w.detail}  
                        </span> 
                    </a>
                </BigListItem>
                ) )}
            </BigList>
        </section>

        <br>

        <p class="text-midground hidden">
            <a
                href="https://andrewjleung.github.io/resumes/AndrewLeung_Resume.pdf"
                class="hover:cursor-pointer"
            >
                <Badge
                    className="rounded-full group hover:scale-[103%]"
                    variant="default"
                >
                    <Notebook
                        className="transition-all ease-out duration-200 mr-0.5 stroke-secondary"
                    />
                    Resume
                </Badge>
            </a>
        </p>
    </main>
</div>

