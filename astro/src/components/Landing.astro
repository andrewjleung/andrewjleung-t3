---
import {
    VerticalSpotlightList,
    VerticalSpotlightListItem,
} from "@/components/vertical-spotlight-list";

type LinkItem = {
    name: string;
    detail?: string;
    href?: string;
};

const WORK_ITEMS: LinkItem[] = [
    {
        name: "PayPal",
        detail: "2023â€”present",
        href: "/work/paypal",
    },
    {
        name: "Poloniex",
        detail: "2021",
        href: "/work/poloniex",
    },
    {
        name: "Teikametrics",
        detail: "2020",
        href: "/work/teikametrics",
    },
    {
        name: "Curriculum Associates",
        detail: "2019",
        href: "/work/curriculum-associates",
    },
    {
        name: "Veoneer",
        detail: "2018",
        href: "/work/veoneer",
    },
];
---

<main class="flex flex-col gap-5">
    <section class="flex flex-col gap-5 animate-fade-in-up">
        <h2 class="">Welcome in, shoes by the door if you please.</h2>

        <p class="text-midground">
            I'm
            <a
                href="/about"
                class="underline hover:text-primary hover:cursor-pointer"
                >Andrew</a
            >
            &mdash; I aim to build simple, satisfying software, for fun and
            friction. I've been writing code for a decade, professionally for
            the last three years.
        </p>

        <p class="text-midground">
            Currently at PayPal Braintree, orchestrating merchant payouts.
            Lately building personal tools in
            <a
                href="https://www.rust-lang.org/"
                class="rust hover:cursor-pointer underline hover:text-chart-1 dark:hover:text-chart-3"
            >
                Rust</a
            >. Curiosity and empathy.
        </p>
    </section>

    <br>

    <section id="work-history" class="mb-42 animate-fade-in-up">
        <VerticalSpotlightList numItems={WORK_ITEMS.length} client:load>
            {WORK_ITEMS.map(w =>(
            <VerticalSpotlightListItem key={`work-item-${w.name.toLowerCase()}`} className="group">
                <a href={w.href} class="flex flex-row items-center">
                    <span
                        class="font-semibold text-3xl tracking-tight duration-200 ease-out group-hover:translate-x-2 whitespace-nowrap"
                    >
                        {w.name}
                    </span>
                    <span
                        class="text-xs ml-auto text-midground opacity-0 group-hover:opacity-90 ease-out duration-400 transition-all mr-2 whitespace-nowrap"
                    >
                        {w.detail}  
                    </span> 
                </a>
            </VerticalSpotlightListItem>
            ) )}
        </VerticalSpotlightList>
    </section>
</main>

